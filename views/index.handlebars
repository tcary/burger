<div class="container">
    <!--Jumbotron-->
    <div class="jumbotron text-center bg-primary text-white">
        <h1 class="display-4" id="app-title">Fantasy Burger <img src="/assets/img/cheeseburger.png"></h1>
        <p class="lead">Welcome to Fantasy Burger. Home of the Fantasy Burger, where you dream it - we make it!</p>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    Can I take your order?
                </div>
                <!--Create/add burger form-->
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="burger">Place order here:</label>
                            <input type="text" class="form-control" id="burgerToGo" placeholder="">
                        </div>
                        <button class="btn btn-primary" type="submit">Place order</button>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <div class="col-md-6 mt-4">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    Burgers
                </div>
                <!--Div to hold burgers that have not been devoured yet-->
                <div class="card-body">
                    {{#each burgers}}
                        {{#unless devoured}}
                            {{> burger-blocked devour=false}}
                        {{/unless}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="col-md-6 mt-4">
            <div class="card devoured-card">
                <div class="card-header text-white" id="devoured-card-header">
                    Devoured burgers
                </div>
                <!--When a burger has been devoured, put burger here-->
                <div class="card-body">
                    {{#each burgers}}
                        {{#if devoured}}
                            {{> burger-devoured devour=true}}
                        {{/if}}
                    {{/each}}
                </div>
            </div>
        </div>
    </div>

    <!--Footer-->
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card footer">
                <div class="card-body footer-body text-white">
                    <h5 class="card-title text-white">Fantasy Burger</h5>
                    <p class="card-text">Welcome to Fantasy Burger. Home of the Fantasy Burger.</p>
                    <br>
                    <br>
                </div>
            </div>
        </div>
    </div>